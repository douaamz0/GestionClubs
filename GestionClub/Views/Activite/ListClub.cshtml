

<h2>Liste des Activites</h2>

<form asp-controller="Activite" asp-action="list" method="get" class="mt-3">
    <div class="form-group">
        <label for="club">Choisissez un club :</label>
        <select id="club" name="id" class="form-control" onchange="this.form.submit()">
            <option value="">-- Sélectionnez un club --</option>
            @foreach (var club in ViewBag.IdClub)
            {
                <option value="@club.Id">@club.Nom</option>
            }
        </select>
    </div>
</form>






